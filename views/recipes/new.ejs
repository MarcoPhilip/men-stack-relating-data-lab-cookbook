<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Add a New Recipe</h1>

    <form action="/recipes" method="POST">
        <strong><label for="name"> Recipe Name:</label></strong>
        <input type="text" id="name" name="name" required />

        <br><br>

        <strong><label for="ingredients"> Ingredients:</label></strong>

        <br><br>

        <textarea type="text" name="ingredients" placeholder="Put all the ingredients list here!" rows="20" cols="40"></textarea>
  
        <br><br>

        <strong><label for="instructions"> Instructions:</label></strong>

        <br><br>

        <textarea type="text" id="instructions" name="instructions" rows="15" cols="80" placeholder="Cooking instructions goes here!"></textarea>

        <br><br>

        <button type="submit">Create Recipe</button>
