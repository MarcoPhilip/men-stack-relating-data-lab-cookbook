<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>My Pantry</h1>
    <a href="/users/<%=user._id%>/foods/new">Add a Recipe</a>
    <ul>
        <% pantry.forEach((recipe)=>{ %>
            <li>
                <a href="/users/<%= user._id %>/foods/<%= recipe._id %>">
                    <%= recipe.foodName %>
                </a>
            </li>
        <% }) %>
    </ul>
  </body>
</html>
